<section class="container-fluid my-5" id="container-fluid">
    <div class="container-fluid">
        <div class="row justify-content-center">
        <% for(let i = 0; i < results.length; i++) { %>
<% if(!results[i].answer) continue %>
            <div class="col-lg-3 my-3">
                <div class="card">
                    <div class="card-body">
                <h5 class="card-title"><%= results[i].answer %></h5>
                    </div>
                </div>
            </div>
            <%    } %>
        </div>
    </div>
</section>